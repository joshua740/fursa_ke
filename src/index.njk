---
layout: base.njk
title: Fursa Kenya
description: Find the latest jobs, internships, and scholarships in Kenya. Fursa Kenya Kenya connects you with opportunities from top companies and organizations.
---
 
<section class="homepage-section featured-opportunities">

  
  <div class="featured-grid">
    {% set featuredPosts = collections.allPosts.slice(0, 3) %}
    
    {% for post in featuredPosts %}
      {% if loop.index == 1 %}
        <!-- Large featured post (100% width) -->
        <article class="featured-post featured-large">
          <a href="{{ post.url }}" class="featured-link">
            <div class="featured-thumbnail">
              {% if post.data.thumbnail %}
                <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" loading="lazy">
              {% else %}
                <img src="/images/default-thumbnail.jpg" alt="Default thumbnail" loading="lazy">
              {% endif %}
              <div class="featured-overlay">
                <div class="featured-meta">
                  <span class="featured-category {{ post.data.category }}">{{ post.data.category | capitalize }}</span>
                  <time datetime="{{ post.date | date('YYYY-MM-DD') }}">{{ post.date | date('MMM D, YYYY') }}</time>
                </div>
                <h3 class="featured-title">{{ post.data.title }}</h3>
                {% if post.data.description %}
                  <p class="featured-description">{{ post.data.description | truncate(120) }}</p>
                {% endif %}
                {% if post.data.location %}
                  <div class="featured-location">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                      <circle cx="12" cy="10" r="3"/>
                    </svg>
                    {{ post.data.location }}
                  </div>
                {% endif %}
              </div>
            </div>
          </a>
        </article>
      {% else %}
        <!-- Small featured posts (50% width each) -->
        <article class="featured-post featured-small">
          <a href="{{ post.url }}" class="featured-link">
            <div class="featured-thumbnail">
              {% if post.data.thumbnail %}
                <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" loading="lazy">
              {% else %}
                <img src="/images/default-thumbnail.jpg" alt="Default thumbnail" loading="lazy">
              {% endif %}
              <div class="featured-overlay">
                <div class="featured-meta">
                  <span class="featured-category {{ post.data.category }}">{{ post.data.category | capitalize }}</span>
                  <time datetime="{{ post.date | date('YYYY-MM-DD') }}">{{ post.date | date('MMM D, YYYY') }}</time>
                </div>
                <h3 class="featured-title">{{ post.data.title }}</h3>
                {% if post.data.location %}
                  <div class="featured-location">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                      <circle cx="12" cy="10" r="3"/>
                    </svg>
                    {{ post.data.location }}
                  </div>
                {% endif %}
              </div>
            </div>
          </a>
        </article>
      {% endif %}
    {% endfor %}
  </div>
</section>


